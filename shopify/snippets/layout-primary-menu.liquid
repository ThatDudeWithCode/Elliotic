<ul class="flex items-center ml-3 space-x-1 md:space-x-2 lg:space-x-3">
    {% for link in linklists.main-menu.links %}
        <li x-data="{ open: false }">
            <a @click="open = ! open" href="{{ link.url }}" class="flex items-center justify-between px-2 py-2 text-base font-normal text-gray-800 transition duration-150 ease-in-out hover:text-gray-600">
                <span class="block">{{ link.title | escape }}</span>
                {% if link.levels >= 1 %}
                    <span class="block pl-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                        </svg>
                    </span>
                {% endif %}
            </a>
            {% if link.levels >= 1 %}
                <!-- Dropdown Menu Container -->
                <ul x-show="open" class="absolute w-48 py-2 mt-6 bg-white shadow-lg">
                    {% for sub_link in link.links %}
                        <li><a href="{{ sub_link.url }}" class="block px-4 py-2 text-base font-normal text-gray-800 transition duration-150 ease-in-out hover:text-gray-600">{{ sub_link.title | escape }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>